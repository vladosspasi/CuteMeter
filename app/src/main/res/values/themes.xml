<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CuteMeter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/pastel_red</item>
        <item name="colorPrimaryVariant">@color/pastel_red_l</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/pastel_blue_l</item>
        <item name="colorSecondaryVariant">@color/pastel_blue</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="tabSelectedTextColor">@color/white</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>


    </style>
    <style name="Theme.CuteMeter.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.CuteMeter.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.CuteMeter.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>